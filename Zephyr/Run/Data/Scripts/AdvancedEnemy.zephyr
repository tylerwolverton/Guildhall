StateMachine
{
	String msg = "Hello";
	
	OnEvent( TestEvent )
	{		
		if(msg == "Hello"){ msg = "Goodbye"; }
		else{ msg = "Hello"; }
	}

	// TODO: reserve Spawn and Die as special events that the user can't fire 
	OnEvent( Spawn )
	{
		FireEvent( EnemySpawned() );
	}

	OnEvent( Die )
	{
		FireEvent( EnemyDied() );
	}

	State TestState
	{	
		FireEvent( PrintDebugText( text = msg )  );
	}
}

