StateMachine
{
	Number enemiesInLevel;

	// TODO: Add parameters to scripts so this can query the map for enemy count

	OnEvent( EnemySpawned )
	{
		enemiesInLevel = enemiesInLevel + 1;

		FireEvent( UpdateEnemyCount( enemyCount = enemiesInLevel ) );
	}

	OnEvent( EnemyDied )
	{
		enemiesInLevel = enemiesInLevel - 1;

		FireEvent( UpdateEnemyCount( enemyCount = enemiesInLevel ) );
	}

