StateMachine
{
    State Waiting
    {
        OnEvent( PlayerInteract )
        {
            FireEvent( StartDialogue() );
    
            ChangeState( Intro );
        }
    }

    State Intro
    {
        OnEvent( PlayerInteract )
        {
            FireEvent( EndDialogue() );

            ChangeState( Waiting );
        }
        
        FireEvent( AddLineOfDialogueText( text = "I'm old" ) );

        // AddDialogueChoice( "", Choice1 );
    }
}