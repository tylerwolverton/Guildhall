StateMachine
{
	// TODO: reserve Spawn and Die as special events that the user can't fire 
	OnEvent( Spawn )
	{
		FireEvent( EnemySpawned() );
	}

	OnEvent( Die )
	{
		FireEvent( EnemyDied() );
	}

	State Wander
	{	
		OnEvent( TestEvent )
		{		
			ChangeState( Chase );
		}

		FireEvent( PrintDebugText( text = "Wander" ) );
	}

	State Chase
	{
		OnEvent( TestEvent )
		{		
			ChangeState( Wander );
		}

		FireEvent( PrintDebugText( text = "Chase" ) );
	}
}

