<DialogueStateDefinitions>

  <DialogueStateDefinition stateName="PurpleTentacle_initial" introText="Hey, how's it going?">
    <Choice text="How did you get here?" targetState="PurpleTentacle_backstory1" />
    <Choice text="Seen any shiny keys around?" targetState="PurpleTentacle_keyChoice1" />
    <Choice text="Nevermind, I'll keep wandering around" targetState="PurpleTentacle_final" />
  </DialogueStateDefinition>

  <DialogueStateDefinition stateName="PurpleTentacle_backstory1" introText="An interdimensional quantum teleportation machine">
    <Choice text="Cool! Can I try it out?" targetState="PurpleTentacle_backstory2" />
  </DialogueStateDefinition>

  <DialogueStateDefinition stateName="PurpleTentacle_backstory2" introText="Do you know anything about quantum mechanics?">
    <Choice text="My dad taught me how to change the brakes on my car, is it similar to that?" targetState="PurpleTentacle_backstory3" />
    <Choice text="Uhh, something with quarks and spooky long distance?" targetState="PurpleTentacle_backstory3" />
  </DialogueStateDefinition>

  <DialogueStateDefinition stateName="PurpleTentacle_backstory3" introText="I don't think you're ready"/>

  <DialogueStateDefinition stateName="PurpleTentacle_keyChoice1" introText="Maybe I have, maybe I haven't...">
    <Choice text="Could I borrow it real quick to unlock the front door?" targetState="PurpleTentacle_keyChoice2" />
  </DialogueStateDefinition>

  <DialogueStateDefinition stateName="PurpleTentacle_keyChoice2" introText="Sure, why not">
    <Item name="Key" />
  </DialogueStateDefinition>

  <DialogueStateDefinition stateName="PurpleTentacle_final" introText="See ya later"/>

  <DialogueStateDefinition stateName="Wally_initial" introText="Make it quick, lots to do">
    <Choice text="What are you reading about?" targetState="Wally_choice1" />
    <Choice text="I'll come back later" targetState="Wally_final" />
  </DialogueStateDefinition>

  <DialogueStateDefinition stateName="Wally_choice1" introText="Here, see for yourself">
    <Item name="Thick Law Book" />
  </DialogueStateDefinition>

  <DialogueStateDefinition stateName="Wally_final" introText="*mumbling and pen scratching"/>

  <DialogueStateDefinition stateName="Cook_initial" introText="Hello there">
    <Choice text="Mind if I borrow those cool arms?" targetState="Cook_choice1" />
    <Choice text="Nevermind" targetState="Cook_final" />
  </DialogueStateDefinition>

  <DialogueStateDefinition stateName="Cook_choice1" introText="I can't just give them away">
    <Choice text="What do you want for them?" targetState="Cook_choice2" />
    <Choice text="Aww, pretty please?" targetState="Cook_no" />
    <Choice text="Nevermind" targetState="Cook_final" />
  </DialogueStateDefinition>

  <DialogueStateDefinition stateName="Cook_choice2" introText="I lost my rocks in the forest, collect them all and you can have the arms">
    <Choice text="Alright, I think I can manage that" targetState="Cook_final2" />
    <Choice text="Nevermind" targetState="Cook_final" />
  </DialogueStateDefinition>

  <DialogueStateDefinition stateName="Cook_no" introText="Nope">
    <Choice text="Fine, what do you want for them?" targetState="Cook_choice2" />
    <Choice text="Pretty please with a cherry on top?" targetState="Cook_no" />
    <Choice text="Nevermind" targetState="Cook_final" />
  </DialogueStateDefinition>

  <DialogueStateDefinition stateName="Cook_final" introText="Have a nice walk"/>
  <DialogueStateDefinition stateName="Cook_final2" introText="Good luck!"/>

</DialogueStateDefinitions>
